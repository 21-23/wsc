@import "../../constants/colors.styl"

body
  font-family 'Roboto', sans-serif
  background-color dark-night
  color white
  margin 0
  padding 0

  .main-container
    min-width 850px
    position relative

::-webkit-scrollbar-track
{
  -webkit-box-shadow: inset 0 0 3px rgba(0,0,0,0.3);
  background-color: dark-night;
}

::-webkit-scrollbar
{
  width: 15px;
  background-color: white-night;
}

::-webkit-scrollbar-thumb
{
  background-color: white-night;
}
