@import "../../constants/colors.styl"

.player
  margin 10px
  position relative
  color yellow-sun
  text-align left
  padding 3% 0 3% 3%;
  font-weight bold
  box-shadow 2px 4px 2px -2px black
  font-size 18px
  letter-spacing 1px

  &:nth-child(odd)
    background-color white-night

  &:nth-child(even)
    background-color night
